{
  "schemaVersion": 1,
  "id": "useful_brush",
  "version": "${version}",
  "name": "Useful Brush",
  "description": "Adds more functionalities to the brush",
  "authors": [
    "ToBinio"
  ],
  "contact": {
    "repo": "https://github.com/toBinio/useful-brush",
    "homepage": "https://github.com/toBinio/useful-brush",
    "issues": "https://github.com/toBinio/useful-brush/issues",
    "sources": "https://github.com/toBinio/useful-brush"
  },
  "license": "MIT",
  "icon": "assets/useful_brush/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "to_binio.useful_brush.client.UsefulBrushClient"
    ],
    "main": [
      "to_binio.useful_brush.UsefulBrush"
    ]
  },
  "mixins": [
    "useful_brush.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=1.20.5"
  },
  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/entity/passive/SheepEntity": [
        "to_binio/useful_brush/BrushCount"
      ],
      "net/minecraft/entity/passive/ChickenEntity": [
        "to_binio/useful_brush/BrushCount"
      ],
      "net/minecraft/entity/passive/MooshroomEntity": [
        "to_binio/useful_brush/BrushCount"
      ],
      "net/minecraft/entity/passive/ArmadilloEntity": [
        "to_binio/useful_brush/BrushCount"
      ]
    }
  }
}
